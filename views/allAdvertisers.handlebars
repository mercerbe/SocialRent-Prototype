                  <a class="" href="/">
                    <figure class="image is-128x128">
                      <img src="/images/socialRentLogo.png" alt="">
                    </figure>
                  </a>
                    <span class="navbar-burger burger" data-target="navbarMenu" style="background-image: linear-gradient(to top, #37ecba 0%, #72afd3 100%);">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </div>
