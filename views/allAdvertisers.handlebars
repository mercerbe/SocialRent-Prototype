<!-- table -->
<div class="container">
  <div class="columns">
    <div class="column is-12">
      <div class="card events-card">
        <div class="card-table" id="allUsers">
          <div class="content">
            <table class="table is-bordered is-narrow is-striped is-hoverable">
              <thead>
                <tr>
                  <th><strong>Company Name</strong></th>
                  <th><strong>About</strong></th>
                  <th><strong>Joined On</strong></th>
                  <th><strong>Message</strong></th>
                </tr>
              </thead>
              <tbody>
                {{#each Advertisers}}
                  <tr>
                    <td><a href="/api/advertisers/{{this.id}}">{{this.company_name}}</a></td>
                    <td>{{this.description}}</td>
                    <td>{{this.createdAt}}</td>
                    <td><a class="button is-small is-primary" href="#"><i data-vi="message" data-vi-size="18"></i>Message</a></td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <footer class="card-footer">
          <a href="/" class="card-footer-item">Marketplace</a>
        </footer>
      </div>
    </div>
  </div>
</div>

