<head>
  <link rel="stylesheet" href="./css/login.css">
</head>

<section class="hero is-success is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title has-text-grey">Signup</h3>
                <p class="subtitle has-text-grey">Please Sign Up</p>
                <div class="box">
                    <figure class="avatar">
                        <img src="./images/login-icon.png">
                    </figure>
                    <form>
                        <div class="field">
                            <div class="control">
                                <i data-vi="envelope"></i>
                                <input class="input is-large" type="email" id="email_input" placeholder="Your Email" autofocus="">
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                              <i data-vi="lock"></i>
                                <input class="input is-large" id="password" type="password_input" placeholder="Your Password">
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                              <i data-vi="lock"></i>
                                <input class="input is-large" id="repeat_password" type="password" placeholder="Repeat Password">
                            </div>
                        </div>
                        <div class="field">
                          <div class="control">
                            <div class="select is-large is-primary">
                              <select>
                                <option>Select Role</option>
                                <option>User</option>
                                <option>Advertiser</option>
                              </select>
                            </div>
                          </div>
                        </div>
                        <!-- company/advertiser options -->
                        <div class="field">
                            <div class="control">
                                <input class="input is-large" id="company_name" type="text" placeholder="Company Name">
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <input class="input is-large" id="description" type="text" placeholder="Description">
                            </div>
                        </div>
                        <!-- user options -->
                        <div class="field">
                            <div class="control">
                                <input class="input is-large" id="twitter_handle" type="text" placeholder="Twitter Handle">
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <input class="input is-large" id="insta_handle" type="text" placeholder="Instagram Handle">
                            </div>
                        </div>

                        <div class="field">
                            <label class="checkbox">
              <input type="checkbox">
              Remember me
            </label>
                        </div>
                        <button style="background-color:rgb(48,169,152);"class="button is-block is-info is-large is-fullwidth">Login</button>
                    </form>
                </div>
                <p class="has-text-grey">
                    &nbsp;·&nbsp; <a href="./">Need Help?</a> &nbsp;·&nbsp;
                </p>
            </div>
        </div>
    </div>
</section>
