<section class="hero is-info is-medium is-bold" style="background-image: linear-gradient(60deg, #3d3393 0%, #2b76b9 37%, #2cacd1 65%, #35eb93 100%);">
    <div class="hero-head">
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a class="navbar-item" href="/">
                        Social Rent
                    </a>
                    <span class="navbar-burger burger" data-target="navbarMenu">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </div>
                <div id="navbarMenu" class="navbar-menu">
                    <div class="navbar-end">
                        <div class="tabs is-right">
                            <ul>
                                <li><a href="/">Market</a></li>
                                <li><a href="/:role/:id">Dashboard</a></li>
                                <li><a href="/advertisers">All Advertisers</a></li>
                                <li><a href="/users">All Users</a></li>
                                <li><a href="/help">Help</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navbar-item logButtons">
              <div class="field is-grouped">
                <p class="control">
                  <a class="button is-outlined is-white" href="/signup">
                    <span class="icon">
                      <i class="fa fa-user-plus"></i>
                    </span>
                    <span>
                      Sign Up
                    </span>
                  </a>
                </p>
                <p class="control">
                  <a class="button is-white is-outlined" href="/login">
                    <span class="icon">
                      <i class="fa fa-user"></i>
                    </span>
                    <span>Login</span>
                  </a>
                </p>
              </div>
            </div>
        </nav>
    </div>
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title is-1">
            Social Rent
            </h1>
            <h2 class="subtitle is-3">
            Businesses: Hire social media users to share your ads <br>
            Users: Get paid to share ads from the companies you support
            </h2>
        </div>
    </div>
</section>
<br>
<section class="container">
  <div class="columns">
    <div class="column is-12">
      <h1 class="subtitle is-3">Current Available Ads</h1>

      <!-- this div if for one full ad -->
      {{#each Ads}}
      <div class="box content" id="displayAd{{this.id}}" >
        <article class="post">
          <h4 id="adTitle{{this.id}}">{{this.title}}</h4>
          <div class="media">
            <div class="media-left">
              <!-- <p class="image is-64x64">
                <img src="http://bulma.io/images/placeholders/128x128.png" id="advertiserLogo{{this.company_name}}">
              </p> -->
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <a href="/api/advertisers/:id" id="advertiserName{{this.creatorID}}">{{this.company_name}}</a> posted on: {{this.createdAt}}&nbsp;
                  <span class="tag is-light">{{this.category}}</span>
                </p>
              </div>
            </div>
            <div class="media-right">
              <!-- <span id="adsRemaining"># remaining: ____</span> -->
              <a href="/api/users/:id" class="has-text-grey-light"><i data-vi="star" data-vi-size="28"></i></a>
            </div>
          </div>
        </article>
        <hr>
        <p id="adBody">{{this.body}}</p>
      </div>
      <!-- end of Ad -->
      {{/each}}
    </div>
  </div>
</section>

<br>
